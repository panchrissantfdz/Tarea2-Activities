<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"  android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@drawable/fragment_rounded_background">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="¡El Momento de Gloria!"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#00BFA5"
        android:gravity="center"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/tv_stats_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="#CCCCCC"
        android:textAlignment="center"
        android:layout_marginBottom="24dp"
        tools:text="Ganador del Balón de Oro 2022. Máximo goleador en la historia de su club." />  <Button
    android:id="@+id/btn_close_stats"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="CERRAR"
    android:layout_gravity="end"
    android:backgroundTint="#FF6E40"
    android:textColor="@android:color/white" />

</LinearLayout>